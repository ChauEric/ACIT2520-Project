<!-- admin.ejs -->

<div class="container">
    <h1 class="mt-4">Dashboard</h1>
    <p class="lead mb-3">Welcome <%= user.name %></p>
  
    <p class="lead mb-3">Current Activity Sessions:</p>
    <ul>
      <% sessions.forEach(function(session) { %>
        <li>
          SessionID: <%= session.SessionID %> <br>
          UserID: <%= session.UserID %>
          <a href="/admin/revoke-session/<%= session.SessionID %>" class="btn btn-secondary">Revoke</a>
        </li>
      <% }); %>
    </ul>
  
    <p class="lead mb-3">Give Admin Role:</p>
    <form action="/admin/give-admin-role" method="post">
      <input type="text" name="userId" placeholder="User ID">
      <button type="submit" class="btn btn-primary">Give Admin Role</button>
    </form>
  
    <a href="/auth/logout" class="btn btn-secondary">Logout</a>
  </div>
  